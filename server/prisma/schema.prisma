datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  commanders Commander[]
  createdAt  DateTime    @default(now())
  firstName  String?
  id         String      @id @default(cuid())
  lastName   String?
  password   String
  roles      String[]
  updatedAt  DateTime    @updatedAt
  username   String      @unique
}

model Commander {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
}

model Soldier {
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  name        String?
  opinions    Opinion[]
  team        Team?     @relation(fields: [teamId], references: [id])
  teamId      String?
  updatedAt   DateTime  @updatedAt
}

model Team {
  commanders Commander[]
  createdAt  DateTime    @default(now())
  id         String      @id @default(cuid())
  name       String?
  soldier    Soldier[]
  updatedAt  DateTime    @updatedAt
}

model Opinion {
  createdAt    DateTime @default(now())
  date         DateTime
  energy       Float?
  id           String   @id @default(cuid())
  positivity   Float?
  productivity Float?
  soldier      Soldier  @relation(fields: [soldierId], references: [id])
  soldierId    String
  text         String?
  updatedAt    DateTime @updatedAt
}